<div class="row">
  <aside class="span4">
    <section>
       <%= form_for(@post) do |f| %>
         <div class="field">
           <%= f.text_area :content, placeholder: "Compose new post..." %>
         </div>
         <%=hidden_field_tag 'group_id',group.id%>
         <%= f.submit "Post", class: "btn btn-large btn-primary" %>
        <% end %>
     </section>
  </aside>
</div>