<h1>Upload Files</h1>
<%=form_for @user_file ,:url=>addfile_files_path,:html=>{:multipart=>true} do |f|%>
 <%= f.label :file, "New File"%>
 <%= f.label :file_name%>
 <span><%= f.text_field :file_name%></span>
 <%= f.label :file_description,"File Description"%>
 <%= f.text_field :file_description%>
 <%= f.file_field :file%>
 <%= hidden_field_tag 'user_id', current_user.id  %>
 <%= f.submit "Add File", class: "btn btn-large btn-primary" %>
<% end %>

