<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
   <section>
     <%= form_for(@user) do |f|%>
     <%= link_to image_tag("anonymous.png"),edit_user_path(@user) if !@user.image? %>
     <%= image_tag @user.image_url(:thumb) if @user.image?%>
     <% end %>
     <h1><%= @user.name %></h1>
     <span><%= link_to "view my profile", @user %></span>
     <span><b>Questions:</b> <%= @user.questions.count %></span>
  </section>
  <section>
   <%= render 'shared/stats' %>
   <% if @users.any? %>
    <div class="user avatars">
    <% @users.each do |user| %>
     
     <%= link_to image_tag("rails.png"),edit_user_path(user) if !user.image? %>
     <%= image_tag user.image_url(:thumb) if user.image?%>
    
   <% end %>
</div>
<% end %>
  </section>
   </aside>
   <div class="span8">
   <h3><%= @title %></h3>
   <% if @users.any? %>
    <ul class="users"> 
    <%= render @users %>
    </ul>
    <%= will_paginate %>
   <% end %>
</div>
</div>
