<% provide(:title, @title) %>
<div class="row">
<aside class="span4">
<section>

<h1><%= @user.name %></h1>
<span><%= link_to "view my profile", @user %></span>
<span><b>Questions:</b> <%= @user.questions.count %></span>
</section>
</aside>
<div class="span8">
<h3><%= @title %></h3>
<% if @streams.any? %>
<ul class="streams">
<%= render @streams %>
</ul>
<%= will_paginate  @streams%>
<% end %>
</div>
</div>
