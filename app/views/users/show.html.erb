<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
   <section>
   <h1>
    <%= @user.name %></br>
    <%= @user.designation %>
   </h1>
<div>
<%= form_for(@user) do |f|%>
  <%= link_to image_tag("anonymous.png"),edit_user_path(current_user) if !@user.image? %>
  <%= image_tag @user.image_url(:thumb) if @user.image?%>
<% end %>
</div>

</section>
  </aside>
</div>
<div>
<% if current_user?(@user)%>	
<%= button_to "add stream", option_users_path(current_user), :method => "get" %>
<%= link_to image_tag("upload.jpeg"),new_file_path, :method=> "get"%>
<% end %>
<%= link_to image_tag("download.jpeg"),list_files_path(@user.id), :method=> "get"%>

</div>
<div>
	<%if current_user?(@user)%>
	<%= button_to "New Group", newgroup_path(current_user), :method=>"get"%>
  <% @user.group_ids.each do |id|%>
  <li>
    <% @group=Group.find_by_id(id)%>
    <%= link_to @group.group_name, @group %>
   </li>
  <% end %>
    <% end %>
</div>

<div>
  <%= button_to "View Request Status",viewstatus_groups_path,:method=>"get",class: "btn btn-large btn-primary"%>
  <%= button_to "All Groups", allgroups_path(current_user),:method=>"get",class: "btn btn-large btn-primary"%>
  

</div>





