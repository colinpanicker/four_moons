<% provide(:title, @title) %>
<div class="row">
<aside class="span4">
<section>
<h1><%= @stream.stream_name %></h1>
<span><%= link_to "view stream", @stream %></span>
<span><b>Questions:</b> <%= @stream.questions.count %></span>
</section>
</aside>

<div class="span8">
<h3><%= @title %></h3>
<% if @users.any? %>
<ul class="users">
<%= render @users %>
</ul>
<%= will_paginate %>
<% end %>
</div>
</div>
