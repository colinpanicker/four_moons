<% provide(:title, 'All Streams') %>
 <h1>All Streams</h1>
 <% @user=User.find(current_user.id)%>
   <%= will_paginate %>
   <ul class="streams">
    <% @streams.each do |stream| %>
        <%@stream=Stream.find_by_id(stream)%>
      <li>

        <%= link_to stream.stream_name, stream%></br>
        <b><%= "followers:"%></b>
          <%= @stream.users.count %>
        <%=  render 'follow_stream_form' if signed_in? %>
       </li>
    <% end %>
   </ul>
   <%= will_paginate %>
